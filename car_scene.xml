<mujoco model="car_scene">

    <asset>
        <mesh name="city" file="city.obj" scale="0.005 0.005 0.005"/>
        <mesh name="car" file="car.obj" scale="1 1 1"/>
        <material name="city_mat" rgba="0.75 0.75 0.75 1" specular="0.3"/>
        <material name="car_gt_mat" rgba="0.32 0.32 0.34 1" specular="0.6" shininess="0.3"/>
    </asset>

    <option timestep="0.01"/>

    <worldbody>

        <body name="city_scene" pos="0 0 1.6">
            <geom type="mesh" mesh="city" material="city_mat" contype="0" conaffinity="0" euler="0 0 90"/>
        </body>

        <geom type="plane" size="200 200 1" rgba="0.85 0.85 0.85 1"/>

        <body name="car_gt" pos="0 12 1.039" quat="1 0 0 0">
            <geom type="mesh" mesh="car" material="car_gt_mat"
                  pos="-1.786565 -3.921281 -1.039063" euler="90 0 0"/>
        </body>

        <body name="reference_axis" pos="8 -10 4">
            <geom type="capsule" fromto="0 0 0 2.5 0 0" size="0.04" rgba="0.8 0.2 0.2 1"/>
            <geom type="capsule" fromto="0 0 0 0 2.5 0" size="0.04" rgba="0.2 0.8 0.2 1"/>
            <geom type="capsule" fromto="0 0 0 0 0 2.5" size="0.04" rgba="0.2 0.4 0.9 1"/>
        </body>

        <camera name="main_cam" pos="0 -35 12" euler="-12 0 0" fovy="45"/>

    </worldbody>

</mujoco>
